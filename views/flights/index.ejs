<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/flights/index.css">
  <%- include('../partials/nav') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <table>
        <thead>
          <tr>
            <th>Airplane</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Depart</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% flights.forEach(flight=> { %>
            <tr>
              <td>
                <%= flight.airplane %>
              </td>
              <td>
                <%= flight.airport %>
              </td>
              <td>
                <%= flight.flightNo %>
              </td>
              <td>
                <%= flight.depart %>
              </td>
              <td>
                <a href="/flights/<%= flight._id %>">Details</a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </main>

    <%- include('../partials/footer') %>