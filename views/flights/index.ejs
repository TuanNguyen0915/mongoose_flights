<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/flights/index.css">
  <%- include('../partials/nav') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <table>
        <thead>
          <tr>
            <th>Airplane</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Depart</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% flights.forEach(flight=> { %>
            <!-- If depart day pass today, the flight's information will be red -->
            <tr class="<%= flight.departs < new Date()?" has-pass":"" %>">
              <td>
                <%= flight.airplane %>
              </td>
              <td>
                <%= flight.airport %>
              </td>
              <td>
                <%= flight.flightNo %>
              </td>
              <td>
                <%= flight.departs.toDateString() %>
              </td>
              <td>
                <a href="/flights/<%= flight._id %>">Details</a>
              </td>
              <th>
                <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST" autocomplete="off">
                  <button type="submit">X</button>
                </form>
              </th>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </main>

    <%- include('../partials/footer') %>