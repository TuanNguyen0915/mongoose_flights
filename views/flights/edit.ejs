<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/flights/new.css">
  <%- include('../partials/nav') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <form action="/flights/<%= flight._id %>?_method=PUT" , method="POST" autocomplete="off">
        <!-- airplane -->
        <label for="airplane-select">Airplane:</label>
        <select name="airplane" id="airplane-select" value="<%= flight.airplane %>" required>
          <option value="American">American</option>
          <option value="SouthWest">SouthWest</option>
          <option value="United">United</option>
        </select>
        <!-- airport -->
        <label for="airport-select">Airport:</label>
        <select name="airport" id="airport-select" value="<%= flight.airport %>" required>
          <option value="DEN">DEN</option>
          <option value="AUS">AUS</option>
          <option value="DFW">DFW</option>
          <option value="LAX">LAX</option>
          <option value="SAN">SAN</option>
        </select>
        <label for="flightNo-input">Flight Number:</label>
        <input type="text" name="flightNo" value="<%= flight.flightNo %>" required>
        <label for="depart-input">Depart:</label>
        <input type="datetime-local" name="departs" value="<%= flight.departs %>">
        <button type="submit">Update</button>
      </form>
    </main>

    <%- include('../partials/footer') %>