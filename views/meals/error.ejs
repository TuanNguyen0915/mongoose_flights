<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <% if (meals.length> 0) { %>
  <p style="margin-bottom: 100px">
    Meals List:
    <select>
      <% meals.forEach(meal=> { %>
      <option><%= meal.name %></option>
      <% }) %>
    </select>
  </p>
  <% } %>
  <!-- Show Error Message -->

  <h2><%= error %></h2>

  <!-- Form -->
  <form action="/meals/" method="POST" autocomplete="off">
    <label for="meal-input">Meal:</label>
    <input type="text" name="name" id="meal-input" />
    <button type="submit">Add Meal</button>
  </form>
</main>

<%- include('../partials/footer') %>
